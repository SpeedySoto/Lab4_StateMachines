#include <avr/io.h>

int main(void){
	DDRB = 0xFF; // Configure port B's 8 pins as outputs
	PORTB = 0x00; // Initialize PORTB output to 0â€™s
	Button = 0x01;
	PORTA0=0x02:
	PORTA1=0x02;
	PORTC=0x07;
	
	while(1) 
	{
	if(Button=PA1)
	{
	PORTC=PORTC-1;
	}
	
	if(PORTC=PA0)
	{
	PORTC=PORTC=1;
	}
	else if(PORTC= PORTA0 &&PORTA1)
	{
	PORTC=0;
	}
	
	}
	return 1;
}
