#include <avr/io.h>

int main(void){
	DDRB = 0xFF; // Configure port B's 8 pins as outputs
	PORTB = 0x00; // Initialize PORTB output to 0â€™s
	PORTA0=x;
	PORTA1=y;
	PORTA2=#;
	PORTB0=0x00;
	Door=0x00;
	PORTA7=0x00;

	while(1)
	{
	if(PORTA2=0x01)&&(PORTB0=0X01)
	{
	Door=0x01;
	}
	
	if(PORTA7=0x01)
	{
	Door=0x01;
	PORTB0=0x00;
	}
	
	else if(!((PORTA2=0x01)&&(PORTB0=0X01))&&(!PORTA7=0x01)
	{
	Door=0x00;	
	}
	return 1;
}
}
